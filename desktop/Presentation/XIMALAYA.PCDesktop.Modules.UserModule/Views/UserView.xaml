<UserControl x:Class="XIMALAYA.PCDesktop.Modules.UserModule.Views.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:MControls="http://ximalaya.com/xaml/controls"
			 xmlns:cal="http://www.codeplex.com/prism">
	<StackPanel Margin="10 30 10 0">
		<!--用户详情-->
		<ContentControl cal:RegionManager.RegionName="{Binding RegionName}" />
		<!--节目数量-->
		<Label FontSize="18" 
			   ContentStringFormat="专辑列表（{0}）" 
			   Content="{Binding Total}"/>
		<!--专辑数据-->
		<ListBox ItemsSource="{Binding Albums}"
				 Background="Transparent"
				 ItemContainerStyle="{DynamicResource NormalAlbumItemStyle}"/>
		<!--分页控件-->
		<MControls:Pagination PageSize="{Binding PageSize}"
							  HorizontalAlignment="Center"
							  Margin="3"
							  IsEnabled="{Binding IsEnable}"
							  CurrentPage="{Binding CurrentPage,Mode=TwoWay}"
							  Total="{Binding Total}"/>
	</StackPanel>
</UserControl>
