<UserControl x:Class="XIMALAYA.PCDesktop.Modules.Menus.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:MControls="http://ximalaya.com/xaml/controls" 
			 xmlns:untils="http://ximalaya.com/xaml/untils"
			 xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:tools="http://ximalaya.com/xaml/tools">
	
	<UserControl.Resources>
		<Style x:Key="NavPathStyle" BasedOn="{StaticResource PathStyle}" TargetType="Path">
			<Setter Property="Width" Value="40"/>
			<Setter Property="Height" Value="40"/>
		</Style>
	</UserControl.Resources>
	
	<StackPanel Orientation="Vertical" 
				Margin="0 10 0 0"
				FocusManager.IsFocusScope="True">
		<MControls:MyToggleButton Width="100" 
								  Height="90" 
								  Padding="0 5 0 0"
								  Margin="0 5"
								  BorderType="None"
								  IsSingle="True"
								  Command="{Binding ShowContentCommand,Source={x:Static tools:CommandSingleton.Instance}}"
								  CommandParameter="{x:Static untils:WellKnownModuleNames.SearchModule}"
								  Foreground="{DynamicResource GrayBrush6}"
								  Background="{DynamicResource BlackBrush}">
			<MControls:MyToggleButton.Content>
				<StackPanel>
					<Path Data="{Binding [search], Source={x:Static MControls:PathData.Instance}}" 
						  Style="{DynamicResource NavPathStyle}"
						  HorizontalAlignment="Center"
						  Fill="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}" >
					</Path>
					<Label Foreground="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}"
						   HorizontalAlignment="Center" 
						   FontSize="16"
						   FontWeight="Bold"
						   Content="搜索"/>
				</StackPanel>
			</MControls:MyToggleButton.Content>
		</MControls:MyToggleButton>
		<MControls:MyToggleButton Width="100" 
								  Height="90" 
								  Padding="0 5 0 0"
								  Margin="0 5"
								  BorderThickness="0"
								  BorderType="None"
								  IsSingle="True"
								  Command="{Binding ShowContentCommand,Source={x:Static tools:CommandSingleton.Instance}}"
								  CommandParameter="{x:Static untils:WellKnownModuleNames.DiscoverModule}"
								  Foreground="{DynamicResource GrayBrush6}"
								  Background="{DynamicResource BlackBrush}">
			<MControls:MyToggleButton.Content>
				<StackPanel>
					<Path Data="{Binding [discover], Source={x:Static MControls:PathData.Instance}}" 
						  Style="{DynamicResource NavPathStyle}"
						  HorizontalAlignment="Center"
						  Fill="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}" >
					</Path>
					<Label Foreground="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}"
						   HorizontalAlignment="Center" 
						   FontSize="16"
						   FontWeight="Bold"
						   Content="发现"/>
				</StackPanel>
			</MControls:MyToggleButton.Content>
		</MControls:MyToggleButton>
		<MControls:MyToggleButton Width="100" 
								  Height="90" 
								  Padding="0 5 0 0"
								  Margin="0 5"
								  BorderThickness="0"
								  BorderType="None"
								  IsBackground="Hidden"
								  IsSingle="True"
								  Command="{Binding RedirectCommand,Source={x:Static tools:CommandSingleton.Instance}}"
								  CommandParameter="http://www.ximalaya.com/download"
								  Foreground="{DynamicResource GrayBrush6}"
								  Background="{DynamicResource BlackBrush}">
			<MControls:MyToggleButton.Content>
				<StackPanel>
					<Path Data="{Binding [download], Source={x:Static MControls:PathData.Instance}}" 
						  Style="{DynamicResource NavPathStyle}"
						  HorizontalAlignment="Center"
						  Fill="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}" >
					</Path>
					<Label Foreground="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}"
						   HorizontalAlignment="Center" 
						   FontSize="16"
						   FontWeight="Bold"
						   Content="下载"/>
				</StackPanel>
			</MControls:MyToggleButton.Content>
		</MControls:MyToggleButton>
		<MControls:MyToggleButton Width="100" 
								  Height="90" 
								  Padding="0 5 0 0"
								  Margin="0 5"
								  BorderThickness="0"
								  BorderType="None"
								  IsBackground="Hidden"
								  IsChecked="{Binding IsSettingFlyoutShow,Source={x:Static tools:GlobalDataSingleton.Instance}}"
								  Foreground="{DynamicResource GrayBrush6}"
								  Background="{DynamicResource BlackBrush}">
			<MControls:MyToggleButton.Content>
				<StackPanel>
					<Path Data="{Binding [setting], Source={x:Static MControls:PathData.Instance}}" 
						  Style="{DynamicResource NavPathStyle}"
						  HorizontalAlignment="Center"
						  Fill="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}" >
					</Path>
					<Label Foreground="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}"
						   HorizontalAlignment="Center" 
						   FontSize="16"
						   FontWeight="Bold"
						   Content="设置"/>
				</StackPanel>
			</MControls:MyToggleButton.Content>
			<MControls:MyToggleButton.ContentChecked>
				<StackPanel>
					<Path Data="{Binding [setting], Source={x:Static MControls:PathData.Instance}}" 
						  Style="{DynamicResource NavPathStyle}"
						  HorizontalAlignment="Center"
						  Fill="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}" >
					</Path>
					<Label Foreground="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}"
						   HorizontalAlignment="Center" 
						   FontSize="16"
						   FontWeight="Bold"
						   Content="设置"/>
				</StackPanel>
			</MControls:MyToggleButton.ContentChecked>
		</MControls:MyToggleButton>
	</StackPanel>
</UserControl>
