<UserControl x:Class="XIMALAYA.PCDesktop.Modules.Menus.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:MControls="http://ximalaya.com/xaml/controls" 
			 xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:tools="http://ximalaya.com/xaml/tools">
	<StackPanel Orientation="Vertical" Margin="0 10 0 0">
		
		<Image Width="60" Source="pack://application:,,,/XIMALAYA.PCDesktop.Tools;component/Resources/Images/logo.png"/>
		<Label Content="喜马拉雅" 
			   Margin="0 0 0 20"
			   Foreground="{DynamicResource AccentColorBrush }"
			   HorizontalContentAlignment="Center"/>
		
		<MControls:MyToggleButton Width="100" 
								  Height="90" 
								  Padding="0 5 0 0"
								  Margin="0 5"
								  BorderThickness="0"
								  BorderType="Rectangle"
								  Foreground="White"
								  IsSingle="True"
								  Background="{DynamicResource AccentColorBrush}"
								  BorderBrush="{DynamicResource AccentColorBrush}">
			<MControls:MyToggleButton.Content>
				<StackPanel>
					<Path Data="{Binding SearchPath, Source={x:Static MControls:PathData.Instance}}" 
						  Style="{DynamicResource PathStyle}"
						  Width="50"
						  Height="50"
						  HorizontalAlignment="Center"
						  Fill="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}" >
					</Path>
					<Label Foreground="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}"
						   HorizontalAlignment="Center" 
						   FontSize="16"
						   FontWeight="Bold"
						   Content="搜索"/>
				</StackPanel>
			</MControls:MyToggleButton.Content>
		</MControls:MyToggleButton>
		<MControls:MyToggleButton Width="100" 
								  Height="90" 
								  Padding="0 5 0 0"
								  Margin="0 5"
								  BorderThickness="0"
								  BorderType="Rectangle"
								  Foreground="White"
								  IsSingle="True"
								  Background="{DynamicResource AccentColorBrush}"
								  BorderBrush="{DynamicResource AccentColorBrush}">
			<MControls:MyToggleButton.Content>
				<StackPanel>
					<Path Data="{Binding DiscoverPath, Source={x:Static MControls:PathData.Instance}}" 
						  Style="{DynamicResource PathStyle}"
						  HorizontalAlignment="Center"
						  Width="50"
						  Height="50"
						  Fill="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}" >
					</Path>
					<Label Foreground="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}"
						   HorizontalAlignment="Center" 
						   FontSize="16"
						   FontWeight="Bold"
						   Content="发现"/>
				</StackPanel>
			</MControls:MyToggleButton.Content>
		</MControls:MyToggleButton>
		<MControls:MyToggleButton Width="100" 
								  Height="90" 
								  Padding="0 5 0 0"
								  Margin="0 5"
								  BorderThickness="0"
								  BorderType="Rectangle"
								  Foreground="White"
								  IsBackground="Visible"
								  IsChecked="{Binding IsSettingFlyoutShow,Source={x:Static tools:FlyoutVisible.Instance}}"
								  Background="{DynamicResource AccentColorBrush}"
								  BorderBrush="{DynamicResource AccentColorBrush}">
			<MControls:MyToggleButton.Content>
				<StackPanel>
					<Path Data="{Binding ToolbarSettings, Source={x:Static MControls:PathData.Instance}}" 
						  Style="{DynamicResource PathStyle}"
						  HorizontalAlignment="Center"
						  Width="50"
						  Height="50"
						  Fill="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}" >
					</Path>
					<Label Foreground="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}"
						   HorizontalAlignment="Center" 
						   FontSize="16"
						   FontWeight="Bold"
						   Content="设置"/>
				</StackPanel>
			</MControls:MyToggleButton.Content>
			<MControls:MyToggleButton.ContentChecked>
				<StackPanel>
					<Path Data="{Binding ToolbarSettings, Source={x:Static MControls:PathData.Instance}}" 
						  Style="{DynamicResource PathStyle}"
						  HorizontalAlignment="Center"
						  Width="50"
						  Height="50"
						  Fill="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}" >
					</Path>
					<Label Foreground="{Binding ForegroundChecked,RelativeSource={RelativeSource AncestorType={x:Type MControls:MyToggleButton}}}"
						   HorizontalAlignment="Center" 
						   FontSize="16"
						   FontWeight="Bold"
						   Content="设置"/>
				</StackPanel>
			</MControls:MyToggleButton.ContentChecked>
		</MControls:MyToggleButton>
	</StackPanel>
</UserControl>
